<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.carquizmobilegame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CarQuizMobileGame">

        <activity android:name=".Hints"
            android:configChanges="keyboardHidden|orientation|screenSize"/>

        <activity android:name=".AdvancedLevel"
            android:configChanges="keyboardHidden|orientation|screenSize"/>

        <activity android:name=".IdentifyCarImage"
            android:configChanges="keyboardHidden|orientation|screenSize"/>

        <activity android:name=".IdentifyCarMake"
            android:configChanges="keyboardHidden|orientation|screenSize"/>

        <activity android:name=".HomePage"
            android:configChanges="keyboardHidden|orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>